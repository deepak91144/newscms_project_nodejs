<%- include("header.ejs") %>
<div id="main-content">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<!-- post-container -->
				<div class="post-container">
					<h2 class="page-heading"><%= post[0].user.user%></h2>
					<% post.forEach((ele,ind)=>{ %>
					<div class="post-content">
						<div class="row">
							<div class="col-md-4">
								<a class="post-img" href="single.php"
									><img src="admin/postimg/<%= ele.img%>" alt=""
								/></a>
							</div>
							<div class="col-md-8">
								<div class="inner-content clearfix">
									<h3>
										<a href="/single/<%= ele._id%>"><%= ele.title%></a>
									</h3>
									<div class="post-information">
										<span>
											<i class="fa fa-tags" aria-hidden="true"></i>
											<a href="/category/<%= ele.category._id%>"
												><%= ele.category.category%></a
											>
										</span>
										<span>
											<i class="fa fa-user" aria-hidden="true"></i>
											<a href="/author/<%= ele.user._id%>"
												><%= ele.user.user%></a
											>
										</span>
										<span>
											<i class="fa fa-calendar" aria-hidden="true"></i>
											01 Nov, 2019
										</span>
									</div>
									<p class="description"><%= post.description%></p>
									<a class="read-more pull-right" href="/single/<%= ele._id%>"
										>read more</a
									>
								</div>
							</div>
						</div>
					</div>
					<% }) %>
					<ul class="pagination">
						<li class="active"><a href="">1</a></li>
						<li><a href="">2</a></li>
						<li><a href="">3</a></li>
					</ul>
				</div>
				<!-- /post-container -->
			</div>
			<%- include("sidebar.ejs") %>
		</div>
	</div>
</div>
<%- include("footer.ejs") %>
