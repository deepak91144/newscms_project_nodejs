<%- include("header.ejs") %>
<div id="admin-content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1 class="adin-heading">Update Category</h1>
			</div>
			<div class="col-md-offset-3 col-md-6">
				<form action="/admin/category/save-updated-category" method="POST">
					<input type="hidden" name="id" value="<%= cat._id %>" />

					<div class="form-group">
						<label>Category Name</label>
						<input
							type="text"
							name="category"
							class="form-control"
							value="<%= cat.category %>"
							placeholder=""
							required
						/>
					</div>
					<input
						type="submit"
						class="btn btn-primary"
						value="Update"
						required
					/>
				</form>
			</div>
		</div>
	</div>
</div>
<%- include("footer.ejs") %>
