<%- include("header.ejs")%>
<div id="admin-content">
	<div class="container">
		<div class="row">
			<div class="col-md-10">
				<h1 class="admin-heading">All Categories</h1>
			</div>
			<div class="col-md-2">
				<a class="add-new" href="/admin/category/add-category">add category</a>
			</div>
			<div class="col-md-12">
				<table class="content-table">
					<thead>
						<th>S.No.</th>
						<th>Category Name</th>
						<th>No. of Posts</th>
						<th>Edit</th>
						<th>Delete</th>
					</thead>
					<tbody>
						<% cat.forEach((ele,ind)=>{ %>
						<tr>
							<td class="id">1</td>
							<td><%= ele.category %></td>
							<td><%= ele.post %></td>
							<td class="edit">
								<a href="/admin/category/update/<%=ele._id%>"
									><i class="fa fa-edit"></i
								></a>
							</td>
							<td class="delete">
								<a href="/admin/category/delete/<%=ele._id%>"
									><i class="fa fa-trash-o"></i
								></a>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
				<ul class="pagination admin-pagination">
					<li class="active"><a>1</a></li>
					<li><a>2</a></li>
					<li><a>3</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
<%- include("footer.ejs")%>
